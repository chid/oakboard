		<div class="post" id="<%= id %>"> 

			<div class="post-body"> 
				<% if (image && image != 'null' && image != null) { %>
				<div class="post-image">
					<a href="http://oakio.s3.amazonaws.com/<%= image %>">
						<img src="http://oakio.s3.amazonaws.com/thumbs/<%= image %>" />
					</a>
				</div>
				<% } %>
				<%= text %>
				<div class="meta"> 
					<%= name ? '<strong>' + name + '</strong>' : 'Anonymous' %> posted
					<span class="time" data-time="<%= time %>"><%= time %></span> &middot;
					<a href="/!/<%= id %>">Reply</a> 
				</div> 
			</div> 

			<div class="post-comments">

			<% if (comments) { %>
				<% if (comments.length >= 5 && is_current_page('/')) { %>
				<div class="comment">
					<a href="/!/<%= id %>">View all <%= cc %> comments</a> 
				</div> 
				<% } %>

				<% for (var i = 0; i < comments.length; i++) { var comment = comments[i]; %>
				<div class="comment"> 
					<% if (comment.image && comment.image != 'null' && comment.image != null) { %>
					<div class="post-image">
						<a href="http://oakio.s3.amazonaws.com/<%= comment.image %>">
							<img src="http://oakio.s3.amazonaws.com/thumbs/<%= comment.image %>" />
						</a>
					</div>
					<% } %>
					<div class="meta">
						<%= comment.name ? '<strong>' + comment.name + '</strong>' : 'Anonymous' %>
						<span class="time" data-time="<%= comment.time %>"><%= comment.time %></span>
					</div> 
					<%= comment.text %><br clear="all" />
				</div> 
				<% } %>
			<% } %>

			</div> 
			<hr /> 
		</div>
